<script type="text/javascript">
    $(".chart-group").each(function (index) {
        $(this).hide();
    });

    $(document).ready(function () {
        $(".chart-group-selector").click(function () {
            $('#tab-' + $(this).attr('id')).fadeToggle();

        });
    });
</script>




